{
  "name": "@splitti/json-schema-to-graphql",
  "version": "0.0.0-development",
  "license": "MIT",
  "author": "Henri Lahtinen",
  "homepage": "https://github.com/split/json-schema-to-graphql#readme",
  "repository": {
    "type": "github",
    "url": "https://github.com/split/json-schema-to-graphql"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "src",
    "patches"
  ],
  "bin": {
    "json-schema-to-graphql": "bin/json-schema-to-graphql.js"
  },
  "scripts": {
    "prepare": "patch-package",
    "build": "dts build --entry src/index.ts --entry src/cli.ts",
    "lint": "dts lint src",
    "start": "dts watch --entry src/index.ts --entry src/cli.ts",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@tsconfig/recommended": "1.0.1",
    "dts-cli": "1.6.0",
    "husky": "7.0.4",
    "json-schema-to-typescript": "11.0.2",
    "patch-package": "6.4.7",
    "prettier": "2.5.1",
    "semantic-release": "22.0.5",
    "tslib": "2.3.1",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@types/json-schema-merge-allof": "0.6.1",
    "graphql": "16.6.0",
    "json-schema-merge-allof": "0.8.1"
  },
  "release": {
    "branches": [
      "main",
      "chore/semantic-release"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**"
          ]
        }
      ]
    ]
  }
}